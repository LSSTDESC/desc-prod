#!/bin/bash

# Read flags.
HELP=
ROOT=
while [ $# -gt 0 ]; do
  ARG=$1
  if [ ${ARG:0:2} = -- ]; then
    FLG=${ARG:2}
    shift
    echo Invalid flag $ARG
    exit 1
  elif [ ${ARG:0:1} = - ]; then
    FLG=${ARG:1}
    shift
    if [ $FLG == 'h' ]; then
      HELP=true
    else
      echo Invalid flag $ARG
      exit 1
    fi
  else
    break
  fi
done

NAME=$(basename $(pwd))

if [ -n "$HELP" ]; then
  echo Usage: $0 TAG ARGS
  echo "  TAG is the $NAME image version."
  echo "  ARGS are the arguments passed to the container"
  exit 0
fi

TAG=$1
shift
FROM=$NAME:$TAG
CNAME=$NAME

# Create external directory.
DATDIR=$HOME/desc/dpvol01
LOCDIR=$HOME/desc/dpvol02
if [ ! -r $DATDIR ]; then
  mkdir -p $DATDIR
fi

echo Starting $CNAME with $FROM
docker run --name $CNAME --rm -p 88:5000 -p 8888:8888 -v $DATDIR:/mnt/dpvol01 -v $LOCDIR:/mnt/dpvol02 -it $FROM $*

